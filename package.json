{
  "name": "MineBench-GPU-RVN",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf dist",
    "build": "vite build",
    "dist": "npm run clean && vite build && electron-builder --dir && move dist web-dist && electron-builder",
    "build:icon": "node ./scripts/make-icon.cjs",
    "electron": "electron electron/main.cjs",
    "dev:all": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && npm run electron\""
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^3.2.1"
  },
  "main": "electron/main.cjs",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.1",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "electron": "^38.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.44.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1",
    "png-to-ico": "^2.0.0"
  },
  "build": {
    "appId": "com.minebench.gpu.rvn",
    "productName": "MineBench-GPU-RVN",
    "files": [
      "web-dist/**/*",
      "electron/**/*",
      "miner/**/*",
      "build/icon.ico",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "extraFiles": [
      {
        "from": "miner",
        "to": "miner",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}